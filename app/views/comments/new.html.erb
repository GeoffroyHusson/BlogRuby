<div class="media">
  <div class="col-xs-6 col-md-offset-3">
    <%= form_for([@article, @article.comments.new]) do |f| %>
      <div class="field">
        <%= f.label :name %><br />
        <%= f.text_field :name %>
      </div>
      <div class="field">
        <%= f.label :body %><br />
        <%= f.text_area :body %>
      </div>
      <div class="actions">
        <%= f.submit 'Add' %>
      </div>
    <% end %>
  </div>
</div>