<p class="notice"><%= notice %></p>
<div class="panel panel-default">
  <div class="panel-heading">
    <div class="pull-right">
      <b><%= I18n.t('Published at')%>: </b> <%= @article.published_at %>
        <b> <%= I18n.t('from')%>: </b> <%= @article.location %>
    </div>
    <h3 class="panel-title">
      <%= @article.title %>
    </h3>
     <h7> par <%= @article.user.email %> </h7>
  </diV>
  <div class="panel-body">
    <%= image_tag(@article.user.avatar_url) if @article.user.avatar? %>
      <%= @article.body %>

      <% @article.tags.any? %>
  <% @article.tags.each do |tag| %>
  <%= link_to tag.name, tagged_url(:tagged_url => tag.name) %>
<% end %>


  </div>
  <div class="panel-footer">
    <div class="pull-left">
      <div class="btn-group" role="group">
        <%= link_to I18n.t('share') , "#", :id => "email_identify", class: "btn btn-default btn-xs" %>
      </div>
    </div>
    <div class="text-right">
       <div class="btn-group" role="group">
        <%= link_to I18n.t('Edit'), edit_article_path(@article), class: "btn btn-default btn-xs" %>
        <%= link_to I18n.t('Back'), articles_path , class: "btn btn-default btn-xs"  %>
      </div>
    </div>
  </div>
</div>
<%= render 'notify_friend' %>
<div class="container">
  <div class="col-xs-6 col-md-offset-3">
    <h3><%= I18n.t('Comments') %></h3>
  </div>
</div>

  <div id="comments">
    <%= render :file => 'comments/_comment' %>
  </div>
<div class="container">
  <div class="col-xs-6 col-md-offset-3">
    <h4><%= I18n.t('toComment') %></h4>
  </div>
</div>
  <%= render :file => 'comments/new' %>

      
